<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mapper.MaterialMapper">
  <resultMap id="BaseResultMap" type="com.ssm.bean.Material">
    <id column="material_id"  property="materialId" />
    <result column="material_type"  property="materialType" />
    <result column="status"  property="status" />
    <result column="remaining"  property="remaining" />
    <result column="note"  property="note" />
  </resultMap>
  <sql id="Base_Column_List">
    material_id,material_type,status,remaining,note
  </sql>
  <select id="findList" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/> from material limit #{rows} offset #{offset}
  </select>
  <select id="findCount" resultType="_int">
    select COUNT(*) from material
  </select>

</mapper>