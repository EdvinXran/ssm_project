<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mapper.material.MaterialMapper">

  <!--物料表查询结果map-->
  <resultMap id="MaterialMap" type="com.ssm.bean.material.Material">
    <id column="material_id"  property="materialId" />
    <result column="material_type"  property="materialType" />
    <result column="status"  property="status" />
    <result column="remaining"  property="remaining" />
    <result column="note"  property="note" />
  </resultMap>
  <!--物料表查询内容-->
  <sql id="Base_Column_List">
    material_id , material_type , status , remaining , note
  </sql>
  <!--查询物料list-->
  <select id="findList" resultMap="MaterialMap">
    select <include refid="Base_Column_List"/> from material limit #{offset},#{rows}
  </select>

  <!--物料收入表查询结果map-->
  <resultMap id="MaterialReceiveMap" type="com.ssm.bean.material.MaterialReceive">
    <id column="receive_id" property="receiveId"/>
    <result column="material_id" property="materialId"/>
    <result column="amount" property="amount"/>
    <result column="receive_date" property="receiveDate"/>
    <result column="sender" property="sender"/>
    <result column="receiver" property="receiver"/>
    <result column="note" property="note"/>
  </resultMap>




  <!--物料收入表查询内容-->
  <sql id="Base_Receive_List">
    receive_id , material_id , amount , receive_date , sender , receiver , note
  </sql>
  <select id="materialReceiveList" resultMap="MaterialReceiveMap">
    select <include refid="Base_Receive_List"/> from material_receive limit #{offset},#{rows}
  </select>


</mapper>